<div class="homebg py-5">
  <div class="container container-hm">
    <div class="row text-center align-middle word">
      <%# <h2>Missing something?</h2> %>
    </div>
    <div class="row align-middle">
    <%= link_to "Fill me up", edit_user_cuisines_path, class: "button-8" %>
  </div>
</div>

<script>
var words = ['Missing something?', 'Let us get to know each other.', 'Get steamy in the kitchen with our saucy recipe matches.', 'Swipe right to love.'],
    part,
    i = 0,
    offset = 0,
    len = words.length,
    forwards = true,
    skip_count = 0,
    skip_delay = 35,
    speed = 120;
var wordflick = function () {
  setInterval(function () {
    if (forwards) {
      if (offset >= words[i].length) {
        ++skip_count;
        if (skip_count == skip_delay) {
          forwards = false;
          skip_count = 0;
        }
      }
    }
    else {
      if (offset == 0) {
        forwards = true;
        i++;
        offset = 0;
        if (i >= len) {
          i = 0;
        }
      }
    }
    part = words[i].substr(0, offset);
    if (skip_count == 0) {
      if (forwards) {
        offset++;
      }
      else {
        offset--;
      }
    }
    $('.word').text(part);
  },speed);
};

$(document).ready(function () {
  wordflick();
});

</script>
