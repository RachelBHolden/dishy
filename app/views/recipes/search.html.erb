<div class="container py-4">
<h1>Search</h1>

  <form action="<%= search_recipes_path %>" method="GET" class="mb-3">
    <div class="input-group">
      <input type="text" class="form-control" placeholder="Search for recipes" name="q">
      <button type="submit" class="btn btn-primary">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </div>
  </form>

  <% @recipes.each do |recipe| %>
    <div class="text-center">
      <img src="<%= asset_path(recipe.photo_url) %>" >
        <%= button_to favorites_path(recipe_id: recipe.id) do %>
        <i class="far fa-heart"></i>
      <% end %>
      <%= link_to recipes_path(recipe) do %>
        <i class="far fa-circle-xmark"></i>
      <% end %>
      <h2><%= recipe.name %></h2>
      <%= link_to "See more details", recipe_path(recipe) %>
    </div>
  <% end %>
</div>
<%= render "shared/navbar" %>
