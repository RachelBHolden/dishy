<%= simple_form_for(@user, url: update_user_cuisines_path, method: :patch) do |f| %>
  <h2>Select Your Cuisine Preferences</h2>
  <%= f.association :cuisines, collection: Cuisine.all,
                    as: :check_boxes,
                    input_html: { class: "tag-selector" },
                    item_wrapper_class: 'tag-item' %>

  <%= f.submit "Save Cuisine Preferences" %>
  <%= button_to "Skip", edit_user_ingredients_path, method: :get, class: "skip-button" %>
<% end %>
