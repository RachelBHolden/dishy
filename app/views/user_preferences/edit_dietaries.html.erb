<%= simple_form_for(@user, url: update_user_dietaries_path, method: :patch) do |form| %>
  <h2>Select Your Dietary Restrictions</h2>
  <%= form.collection_check_boxes(:dietary_ids, Dietary.all, :id, :dietary_type) %>
  <%= form.submit "Save Dietary Preferences" %>
    <%= button_to "Skip", edit_user_dietaries_path, method: :get, class: "skip-button" %>

<% end %>
