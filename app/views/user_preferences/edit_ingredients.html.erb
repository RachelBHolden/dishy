<%= simple_form_for(@user, url: update_user_ingredients_path, method: :patch) do |form| %>
  <h2>Select Your Ingredient Preferences</h2>
  <%= form.collection_check_boxes(:ingredient_ids, Ingredient.all, :id, :name) %>
  <%= form.submit "Save Ingredient Preferences" %>
    <%= button_to "Skip", user_recipes_path, method: :get, class: "skip-button" %>

<% end %>
