<h1>All Recipes</h1>
<% @recipes.each do |recipe| %>
  <div class="recipe-card">
    <h2><%= recipe.name %></h2>
    <h3>Ingredients</h3>
    <ul>
      <% recipe.ingredients.each do |ingredient| %>
          <li><%= ingredient.name %></li>
      <% end %>
    </ul>
    <h3>Cuisines</h3>
    <ul>
      <% recipe.cuisines.each do |cuisine| %>
          <li><%= cuisine.name %></li>
      <% end %>
    </ul>
    <h3>Dietary Restrictions</h3>
    <ul>
      <% recipe.dietaries.each do |dietary| %>
          <li><%= dietary.dietary_type %></li>
      <% end %>
    </ul>
    <!-- Add a checkbox or button for selecting the recipe -->
      <% if current_user.recipes.include?(recipe) %>
      <%= link_to "Remove from favourite", unfavourite_user_recipe_path(recipe) %>
    <% else %>
      <%= link_to "Favourite this recipe", favourite_user_recipe_path(recipe) %>
    <% end %>
    <%= link_to 'Go to Favourites', favourite_index_path, class: 'btn btn-primary' %>
    </div>
<% end %>
