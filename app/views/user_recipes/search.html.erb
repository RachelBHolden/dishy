<h1>Search Results</h1>
<div class="swiper">
  <div class="swiper-wrapper">
    <% @recipes.each do |recipe| %>
      <%# <div class="swiper-slide swiper-bg text-center" style="background-image: url('<%= asset_path(recipe.photo_url) %>
      <div class="swiper-slide swiper-bg text-center">
        <img src="<%= asset_path(recipe.photo_url) %>" >
          <%= button_to favourites_path(recipe_id: recipe.id) do %>
          <i class="far fa-heart"></i>
        <% end %>
        <%= link_to user_recipes_path(recipe) do %>
          <i class="far fa-circle-xmark"></i>
        <% end %>
        <h2><%= recipe.name %></h2>
        <%= link_to "See more details", user_recipe_path(recipe) %>
      </div>
    <% end %>
  </div>
  <%= render "shared/navbar" %>
</div>
